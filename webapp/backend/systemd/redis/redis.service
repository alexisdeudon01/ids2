[Unit]
Description=Redis Cache Service
After=network.target docker.service
Requires=docker.service

[Service]
Type=forking
User=root
WorkingDirectory=/opt/ids2/webapp/backend/docker
ExecStart=/usr/bin/docker-compose up -d redis
ExecStop=/usr/bin/docker-compose stop redis
ExecReload=/usr/bin/docker-compose restart redis
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target